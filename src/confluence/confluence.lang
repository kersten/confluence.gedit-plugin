<language id="confluence" _name="Confluence Wiki Syntax" version="2.0" _section="WikiSyntax">
  <metadata>
    <property name="mimetypes">text/plain</property>
  </metadata>

  <styles>
    <style id="text" _name="Text" map-to="def:bold"/>
    <style id="heading" _name="Heading" map-to="def:heading"/>
  </styles>

  <definitions>

    <context id="bash-line-comment" style-ref="text" end-at-line-end="true" extend-parent="false">
      <start></start>
      <include>
        <context ref="def:in-line-comment"/>
      </include>
    </context>

  </definitions>
</language>
